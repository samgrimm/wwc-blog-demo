<div class="login">
  <div class="card">
    <div class="card-block">
      <h2><%= t('.title')%></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name, locale:I18n.locale), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit t('.send_instructions'), class:"btn btn-primary btn-block" %>
        </div>
      <% end %>
      <div class="auth-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
